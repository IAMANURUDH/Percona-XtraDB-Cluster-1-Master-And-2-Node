(MASTER)IP:10.0.0.1
apt update && apt upgrade -y && apt install redis -y && apt install redis-sentinel -y && apt install firewalld -y
systemctl stop sentinel
chown redis:redis /etc/redis/sentinel.conf
chown redis:redis /var/log/redis/redis-sentinel.log
ufw allow 6379
ufw allow 26379
ufw allow 22
nano /etc/redis/redis.conf
bind 127.0.0.11 10.0.0.1
protected-mode no
ctrl+x and save it
systemctl restart redis
(SLAVE1)IP:10.0.0.2
apt update && apt upgrade -y && apt install redis -y && apt install redis-sentinel -y && apt install firewalld -y
systemctl stop sentinel
chown redis:redis /etc/redis/sentinel.conf
chown redis:redis /var/log/redis/redis-sentinel.log
ufw allow 6379
ufw allow 26379
ufw allow 22
nano /etc/redis/redis.conf
bind 127.0.0.11 10.0.0.2
protected-mode no
IN LAST LINE ADD: slaveof 10.0.0.1 6379
ctrl+x and save it
systemctl restart redis
(SLAVE2)IP:10.0.0.3
apt update && apt upgrade -y && apt install redis -y && apt install redis-sentinel -y && apt install firewalld -y
systemctl stop sentinel
chown redis:redis /etc/redis/sentinel.conf
chown redis:redis /var/log/redis/redis-sentinel.log
ufw allow 6379
ufw allow 26379
ufw allow 22
nano /etc/redis/redis.conf
bind 127.0.0.11 10.0.0.1
protected-mode no
IN LAST LINE ADD:slaveof 10.0.0.1 6379
ctrl+x and save it
systemctl restart redis
